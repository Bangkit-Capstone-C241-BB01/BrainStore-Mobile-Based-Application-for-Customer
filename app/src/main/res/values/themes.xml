<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.BrainStore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.BrainStore" parent="Base.Theme.BrainStore" />

    <style name="bg_main">
        <item name="android:background">@color/white</item>
    </style>

    <style name="bg_main2">
        <item name="android:background">@color/white_2</item>
    </style>

    <style name="bg_main3">
        <item name="android:background">@color/white_g</item>
    </style>

    <style name="searchBar">
        <item name="backgroundTint">@color/white</item>
        <item name="navigationIconTint">@color/main_color</item>
        <item name="strokeColor">@color/light_grey</item>
    </style>

    <style name="SearchBarCorner">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="horizontalSV">
        <item name="android:background">@color/white</item>
    </style>

    <style name="itemCardView">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="CustomButtonStyle1" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/main_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="CustomButtonStyle2">
        <item name="strokeColor">@color/main_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/main_color</item>
    </style>

    <style name="fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/main_color</item>
    </style>

    <style name="customFloatingButton">
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/CustomToolbarTitle</item>
    </style>

    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/balsamiqsans_bold</item>
    </style>

    <style name="editMe" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/main_color</item>
    </style>

    <style name="menuMe" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white_3</item>
    </style>

    <style name="TextView2">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="hr">
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="msg">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottomNav">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/main_color</item>
        <item name="itemTextColor">@color/main_color</item>
    </style>

    <style name="BottomAppBarBehavior" app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />

</resources>