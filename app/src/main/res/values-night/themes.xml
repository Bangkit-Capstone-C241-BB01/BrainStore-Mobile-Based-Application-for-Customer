<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BrainStore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/dark_background</item>
    </style>

    <style name="bg_main">
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="bg_main2">
        <item name="android:background">@color/darker_grey</item>
    </style>

    <style name="bg_main3">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="searchBar">
        <item name="backgroundTint">@color/dark_background</item>
        <item name="navigationIconTint">@color/main_color</item>
        <item name="strokeColor">@color/light_grey</item>
    </style>

    <style name="horizontalSV">
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="itemCardView">
        <item name="android:backgroundTint">@color/dark_grey3</item>
    </style>

    <style name="CustomButtonStyle1" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/main_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="CustomButtonStyle2">
        <item name="strokeColor">@color/main_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/main_color</item>
    </style>

    <style name="fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/dark_grey3</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="icon">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="editMe" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_grey3</item>
    </style>

    <style name="menuMe" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_grey</item>
    </style>

    <style name="TextView2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="hr">
        <item name="android:background">@color/white</item>
    </style>

    <style name="msg">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bottomNav">
        <item name="android:background">@color/dark_background</item>
        <item name="itemIconTint">@color/grey</item>
        <item name="itemTextColor">@color/white</item>
    </style>

</resources>